<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_header" >

    <ImageView
        android:id="@+id/select_album_art"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitEnd"
        android:src="@drawable/unknown_album" />

    <ImageView
        android:id="@+id/select_album_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_album_art"
        android:layout_toLeftOf="@+id/select_album_art"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/select_album_share_madsonic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/select_album_share"
        android:layout_toLeftOf="@+id/select_album_share"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_madsonic"
        android:visibility="gone" />

    <TextView
        android:id="@+id/select_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/select_albumartist_toptrack"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/select_album_art"
        android:ellipsize="end"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="4dp"
        android:singleLine="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/mediaControlForeground"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/select_album_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_album_title"
        android:layout_alignRight="@+id/select_albumartist_toptrack"
        android:layout_below="@+id/select_album_title"
        android:ellipsize="end"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/select_album_song_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_album_artist"
        android:layout_alignRight="@+id/select_albumartist_toptrack"
        android:layout_below="@+id/select_album_artist"
        android:ellipsize="none"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="6dp"
        android:singleLine="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/select_albumartist_toptrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="1dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        android:paddingLeft="9dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/action_toptrack" />

    <ImageView
        android:id="@+id/select_albumartist_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/select_albumartist_toptrack"
        android:layout_toLeftOf="@+id/select_albumartist_toptrack"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/select_album_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/select_albumartist_star"
        android:layout_toLeftOf="@+id/select_albumartist_star"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/ic_action_share" />

</RelativeLayout>